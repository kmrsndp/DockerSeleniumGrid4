<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Suite" parallel="tests" thread-count="4">

    <test verbose="2" name="SetUpDockerGrid">
        <classes>
            <class name="org.practice.config.SetUpDockerGrid">
            </class>
        </classes>
    </test>

    <test verbose="2" name="Test1">
        <parameter name="browser" value="CHROME"/>
        <classes>
            <class name="org.practice.tests.DockerSeleniumGridTest">
                <methods>
                    <include name="googleOnChromeTest"/>
                </methods>
            </class>
        </classes>
    </test>

    <test verbose="2" name="Test2">
        <parameter name="browser" value="FIREFOX"/>
        <classes>
            <class name="org.practice.tests.DockerSeleniumGridTest">
                <methods>
                    <include name="linkedInOnFirefoxTest"/>
                </methods>
            </class>
        </classes>
    </test>

    <test verbose="2" name="Test3">
        <parameter name="browser" value="EDGE"/>
        <classes>
            <class name="org.practice.tests.DockerSeleniumGridTest">
                <methods>
                    <include name="facebookOnEdgeTest"/>
                </methods>
            </class>
        </classes>
    </test>

    <test verbose="2" name="Test4">
        <parameter name="browser" value="CHROME"/>
        <classes>
            <class name="org.practice.tests.DockerSeleniumGridTest">
                <methods>
                    <include name="facebookOnChromeTest"/>
                </methods>
            </class>
        </classes>
    </test>


</suite>